---
interface Props {
  generator: string;
  title: string;
  description: string;
  websiteUrl: string;
  altImage: string;
}

const { generator, title, description, websiteUrl, altImage } =
  Astro.props as Props;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="generator" content={generator} />
<meta name="viewport" content="width=device-width" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="mask-icon" href="/favicon.svg" color="#ffffff" />
<!-- Page Metadata -->
<meta name="generator" content={generator} />
<link rel="canonical" href={websiteUrl} />
<title>{title}</title>
<meta name="description" content={description} />
<!-- OpenGraph Tags -->
<meta property="og:title" content={title} />
<meta property="og:type" content="website" />
<meta property="og:url" content={websiteUrl} />
<meta property="og:locale" content="en" />
<meta property="og:description" content={description} />
<meta property="og:site_name" content={title} />
<meta property="og:image" content={`${websiteUrl}/favicon.svg"`} />
<meta property="og:image:alt" content={altImage} />
<!-- Twitter Tags -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="beanstreetdotcom" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={`${websiteUrl}/favicon.svg`} />
<meta name="twitter:image:alt" content={altImage} />
