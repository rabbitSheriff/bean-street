---
interface Props {
  generator: string;
  title: string;
  description: string;
  websiteUrl: string;
  altImage: string;
}

const { generator, title, description, websiteUrl, altImage } = Astro.props as Props;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="generator" content={generator} />
<meta name="viewport" content="width=device-width" />
<link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png" />
<link rel="manifest" href="/favicons/site.webmanifest" />
<link rel="mask-icon" href="/favicons/safari-pinned-tab.svg" color="#4d403d" />
<link rel="shortcut icon" href="/favicons/favicon.ico" />
<meta name="apple-mobile-web-app-title" content={title} />
<meta name="application-name" content={title} />
<meta name="msapplication-TileColor" content="#f7f4f0" />
<meta name="msapplication-config" content="/favicons/browserconfig.xml" />
<meta name="theme-color" content="#f7f4f0" />
<!-- Page Metadata -->
<meta name="generator" content={generator} />
<link rel="canonical" href={websiteUrl} />
<title>{title}</title>
<meta name="description" content={description} />
<!-- OpenGraph Tags -->
<meta property="og:title" content={title} />
<meta property="og:type" content="website" />
<meta property="og:url" content={websiteUrl} />
<meta property="og:locale" content="en" />
<meta property="og:description" content={description} />
<meta property="og:site_name" content={title} />
<meta property="og:image" content={`${websiteUrl}/favicon.jpg"`} />
<meta property="og:image:alt" content={altImage} />
<!-- Twitter Tags -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="beanstreetdotcom" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={`${websiteUrl}/favicon.jpg`} />
<meta name="twitter:image:alt" content={altImage} />
